{
	"name": "webri.ng",
	"version": "1.0.2",
	"description": "Webri.ng site",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/webri-ng/webri.ng.git"
	},
	"main": "./index.ts",
	"license": "UNLICENSED",
	"engines": {
		"node": "16.x"
	},
	"contributors": [
		"Anthony Richardson <anthony@ajxs.me> (https://github.com/ajxs)"
	],
	"scripts": {
		"build:dev": "tsc -w",
		"build": "tsc",
		"start:dev": "nodemon",
		"start": "cd dist && npm install --omit=dev && NODE_ENV=production node start.js",
		"test:lint": "eslint './**/*.ts'",
		"test:lint:fix": "eslint --fix './**/*.ts'",
		"test": "npm run build && NODE_ENV=test nyc mocha --require ./test-setup.ts '**/*.spec.ts'",
		"test:single": "npm run build && NODE_ENV=test nyc mocha --require ./test-setup.ts"
	},
	"nyc": {
		"include": [
			"**/*.ts"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.spec.ts"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"report-dir": "./coverage",
		"sourceMap": true,
		"instrument": true
	},
	"nodemonConfig": {
		"watch": [
			"./**/*.ts"
		],
		"ext": "ts",
		"ignore": [
			"./**/*.spec.ts"
		],
		"exec": "ts-node ./start.ts"
	},
	"dependencies": {
		"ajv": "^8.8.2",
		"bcrypt": "^5.0.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dayjs": "^1.10.7",
		"express": "^4.17.2",
		"nodemailer": "^6.7.2",
		"pg": "^8.7.1",
		"pug": "^3.0.2",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.12",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/chai": "^4.3.0",
		"@types/chai-as-promised": "^7.1.4",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/mocha": "^9.0.0",
		"@types/node": "^17.0.8",
		"@types/nodemailer": "^6.4.4",
		"@types/pug": "^2.0.6",
		"@types/sinon": "^10.0.8",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"chai-http": "^4.3.0",
		"eslint": "^8.37.0",
		"mocha": "^9.1.3",
		"nodemon": "^2.0.15",
		"nyc": "^15.1.0",
		"sinon": "^12.0.1",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
