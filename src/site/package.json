{
	"name": "webri.ng",
	"version": "1.0.3",
	"description": "Webri.ng site",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/webri-ng/webri.ng.git"
	},
	"license": "GPL-3.0-or-later",
	"engines": {
		"node": "20.x"
	},
	"contributors": [
		"Anthony Richardson <ajxs@panoptic.online> (https://github.com/ajxs)"
	],
	"scripts": {
		"build:dev": "tsc -w",
		"build": "tsc",
		"build:digitalocean": "npm install --production=false && npm run build && npm ci",
		"clean": "rm -rf dist",
		"prebuild": "mkdir -p dist/api/view && cp -r static dist && cp -r template dist && cp -r api/view dist/api/view",
		"start:dev": "nodemon",
		"start": "node ./dist/start.js",
		"test:lint": "eslint './**/*.ts'",
		"test:lint:fix": "eslint --fix './**/*.ts'",
		"test": "npm run test:single '**/*.spec.ts'",
		"test:single": "npm run build && NODE_ENV=test nyc mocha --require ./test-setup.ts",
		"css": "sass --style=expanded  --no-source-map ./site.scss ./static/site.css"
	},
	"nyc": {
		"exclude": [
			"**/*.d.ts",
			"**/*.spec.ts"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"report-dir": "./coverage",
		"sourceMap": true,
		"instrument": true
	},
	"nodemonConfig": {
		"ext": "ts,scss",
		"ignore": [
			"./**/*.spec.ts"
		],
		"exec": "npm run css && ts-node ./start.ts"
	},
	"dependencies": {
		"ajv": "^8.12.0",
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dayjs": "^1.11.10",
		"express": "^4.18.3",
		"express-rate-limit": "^7.3.0",
		"nodemailer": "^6.9.11",
		"pg": "^8.11.3",
		"pug": "^3.0.2",
		"reflect-metadata": "^0.2.1",
		"typeorm": "^0.3.12",
		"uuid": "^9.0.1",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/chai": "^4.3.0",
		"@types/chai-as-promised": "^7.1.4",
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/mocha": "^9.0.0",
		"@types/node": "^17.0.8",
		"@types/nodemailer": "^6.4.4",
		"@types/pug": "^2.0.6",
		"@types/sinon": "^10.0.8",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"chai-http": "^4.3.0",
		"eslint": "^8.37.0",
		"mocha": "^9.1.3",
		"nodemon": "2.0.15",
		"nyc": "^15.1.0",
		"sass": "^1.77.4",
		"sinon": "^12.0.1",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
