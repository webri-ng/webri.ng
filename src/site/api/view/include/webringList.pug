ul.webring-list
	each webring in webrings
		li 
			a(href='/webring/' + webring.url).name #{webring.name}
			div.description
				if webring.description.length > 100
					| #{webring.description.substring(0, 100)}...
				else
					| #{webring.description}

div.webring-list-navigation
	if totalPages > 1
		if currentPage > 1
			a(href='/user?page=' + previousPageNumber) Previous Page
		if currentPage < totalPages
			a(href='/user?page=' + nextPageNumber) Next Page
