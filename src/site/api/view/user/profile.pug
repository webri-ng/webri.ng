extends ../layout.pug

block title
	| webri.ng | Profile

block content
	h1 Profile
	p Hello #{user.username}, welcome back!
	div.controls
		a(href='/user/update') Update Your Details
		a(href='/user/update-password') Update Your Password
	h2 Your Webrings
	div
		if webrings.length == 0 
			| You haven't created any webrings yet. Feel free to create one!
		else
			include ../include/webringList

			if totalPages > 1
				| (Page #{currentPage})
