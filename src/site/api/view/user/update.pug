extends ../layout.pug

block title
	| webri.ng | Update

block content
	h1 Update your details
	form#update-user-form
		div.form-field
			label(for='username') Username: 
			input#username(type='text' name='username' minlength=2 maxlength=80 required value=user.username)
		div.form-field
			label(for='email') Email: 
			input#email(type='email' name='email' required value=user.email)
		div.form-buttons
			button(type='button', onclick="updateUser()") Update
		div#update-user-error-message.error-message
